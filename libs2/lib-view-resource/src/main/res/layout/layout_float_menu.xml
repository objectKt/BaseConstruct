<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_float_window"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:background="#00000000">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/idMenuRoot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_float_window"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/svg_logo_ben_car" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/idMenuHome"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/idMenuRoot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/svg_pic_home" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/idMenuBack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/idMenuRoot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/idMenuRoot"
        app:layout_constraintTop_toTopOf="@id/idMenuRoot"
        app:srcCompat="@drawable/svg_pic_back_page" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/idMenuSettings"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/idMenuHome"
        app:layout_constraintStart_toStartOf="@id/idMenuHome"
        app:layout_constraintTop_toBottomOf="@id/idMenuRoot"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/svg_pic_phone_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>