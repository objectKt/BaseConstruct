<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/bgIV"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:scaleType="centerInside"
        android:src="@drawable/meter_mid_mile_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/unitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/bgIV"
        app:layout_constraintEnd_toEndOf="@id/bgIV"
        app:layout_constraintBottom_toBottomOf="@id/bgIV"
        android:layout_marginBottom="36dp"
        android:textColor="@color/ffffff"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/speedTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/bgIV"
        app:layout_constraintEnd_toEndOf="@id/bgIV"
        app:layout_constraintTop_toTopOf="@id/bgIV"
        android:textColor="@color/colorWhite"
        android:textSize="33sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>