<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qidong_after"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        >
        <FrameLayout
            android:id="@+id/qidong_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:gravity="center|bottom"
                        android:text="启动后"
                        android:textSize="40px"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/qidong_after_mile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:layout_marginLeft="60dp"
                            android:text="0km"
                            android:textSize="35px"
                            android:textColor="@color/colorWhite" />
                        <TextView
                            android:id="@+id/qidong_after_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:layout_marginRight="60dp"
                            android:text="2:49h"
                            android:textSize="35px"
                            android:textColor="@color/colorWhite"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_1"
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_centerInParent="true"
                            android:textSize="15dp"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/yezi"/>
                        <TextView
                            android:id="@+id/textView1_1"
                            android:layout_width="150dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/tv_1"
                            android:background="@drawable/seperate_left_green" />
                        <TextView
                            android:id="@+id/textView2_1"
                            android:layout_width="150dp"
                            android:layout_height="3dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_1"
                            android:background="@drawable/seperate_right_green"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">
                        <TextView
                            android:id="@+id/qidong_after_mile_green"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="60dp"
                            android:text="0km"
                            android:textSize="35px"
                            android:textColor="@color/colorGreen" />
                        <TextView
                            android:id="@+id/qidong_after_time_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="60dp"
                            android:text="0:00h"
                            android:textSize="35px"
                            android:textColor="@color/colorGreen"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="99.9l/100km"
                        android:textSize="35px"
                        android:textColor="@color/colorWhite" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="0km/h"
                        android:textSize="35px"
                        android:textColor="@color/colorWhite"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/qidong_framelayout_alert"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|bottom"
                        android:gravity="center|bottom"
                        android:text="是否复位启动后"
                        android:textSize="30px"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginTop="100px"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/confirm_button_true"
                            android:layout_width="match_parent"
                            android:layout_height="50px"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/item_selector"
                            android:text="是"
                            android:textSize="20px"
                            android:textColor="@color/colorWhite" />
                        <TextView
                            android:id="@+id/confirm_button_false"
                            android:layout_width="match_parent"
                            android:layout_height="50px"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="否"
                            android:textSize="20px"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>