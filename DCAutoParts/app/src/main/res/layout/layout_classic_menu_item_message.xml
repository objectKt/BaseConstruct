<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_tain_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/main_tain_info_done"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <!-- 信息-->
        <TextView
            android:id="@+id/main_tain_info_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32px"
            android:maxLines="3"
            android:textColor="@color/colorWhite"
            android:text="保养过了"
            />
        <TextView
            android:id="@+id/main_tain_info_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32px"
            android:maxLines="3"
            android:textColor="@color/colorWhite"
            android:text="已经保养"
            android:background="@drawable/nav_meter_maintain_seletor"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/main_tain_info_alert"
        android:visibility="visible"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="120px"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <TextView
                android:id="@+id/main_tain_info_alert_img"
                android:layout_width="200px"
                android:layout_height="75px"
                android:layout_gravity="bottom|center"
                android:gravity="center">
                <!--                android:background="@color/colorGreen"-->
            </TextView>
            <!-- 信息-->
            <TextView
                android:id="@+id/main_tain_info_alert_detail"
                android:layout_width="350px"
                android:layout_height="85px"
                android:layout_marginTop="50px"
                android:layout_gravity="top|center"
                android:gravity="top|center"
                android:textSize="30px"
                android:textColor="@color/colorWhite"
                android:text=""
                />
        </LinearLayout>

    </FrameLayout>
</FrameLayout>