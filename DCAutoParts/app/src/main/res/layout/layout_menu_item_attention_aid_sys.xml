<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/attention_nav"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <!--    android:layout_marginTop="150px"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">
        <!--        android:background="@drawable/nav_meter_maintain_seletor"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            >
            <TextView
                android:id="@+id/titleTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="50px"
                android:textColor="@color/colorWhite"
                android:text="@string/attention_assist_system"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            >
            <TextView
                android:id="@+id/rest_time"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20px"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/degree_attention_text_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/degree_attention_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="@string/attention_level"/>

            <com.android.launcher.view.AttentionProgressBarView
                android:id="@+id/degree_seek_bar"
                android:layout_width="283px"
                android:layout_height="20px"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                />
            <LinearLayout
                android:layout_width="283px"
                android:layout_height="30px"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lowTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/low"
                        android:textColor="@color/colorWhite"
                        android:textSize="20px"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/highTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/high"
                        android:textColor="@color/colorWhite"
                        android:textSize="20px"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>