<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rightMeterRootCL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="80dp"
    android:visibility="invisible"
    >

    <View
        android:layout_width="351px"
        android:layout_height="351px"
        app:layout_constraintStart_toStartOf="@id/rightMeterBgIv"
        app:layout_constraintEnd_toEndOf="@id/rightMeterBgIv"
        app:layout_constraintTop_toTopOf="@id/rightMeterBgIv"
        android:background="@drawable/bg_map_meter"
        app:layout_constraintBottom_toBottomOf="@id/rightMeterBgIv"/>

    <ImageView
        android:id="@+id/rightMeterBgIv"
        android:layout_width="351px"
        android:layout_height="351px"
        android:src="@drawable/ic_classic_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <com.android.launcher.meter.view.WaterTempMeterView
        android:id="@+id/watertempMeterView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/rightMeterBgIv"
        app:layout_constraintEnd_toEndOf="@id/rightMeterBgIv"
        app:layout_constraintStart_toStartOf="@id/rightMeterBgIv"
        app:layout_constraintTop_toTopOf="@id/rightMeterBgIv" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="26dp"
        android:text="50"
        android:textColor="@color/ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/rightMeterBgIv"
        app:layout_constraintStart_toStartOf="@id/rightMeterBgIv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="26dp"
        android:text="130"
        android:textColor="@color/ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/rightMeterBgIv"
        app:layout_constraintEnd_toEndOf="@id/rightMeterBgIv" />

    <ImageView
        android:id="@+id/waterTempIV"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/tmp"
        app:layout_constraintBottom_toBottomOf="@id/rightMeterBgIv"
        app:layout_constraintEnd_toEndOf="@id/rightMeterBgIv"
        app:layout_constraintStart_toStartOf="@id/rightMeterBgIv" />

    <ImageView
        android:id="@+id/right_pointer"
        android:layout_width="361px"
        android:layout_height="361px"
        android:src="@drawable/ic_classic_left_pointer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>