<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/phone_call"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100px"
        android:background="@drawable/phone_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:orientation="vertical">
            <TextView
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/meter_phone" />
            <TextView
                android:id="@+id/phoneUserNameSelected"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="20px" />

            <TextView
                android:id="@+id/phone_call_status"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:text="通话中"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20px"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="180px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phoneOver"
                android:layout_width="200px"
                android:layout_height="60px"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="接通"
                android:textColor="@color/colorWhite"
                android:textSize="20px"
                android:background="@drawable/phone_over_back_ground_call"/>
            <TextView
                android:id="@+id/phoneOver_hangup"
                android:layout_width="200px"
                android:layout_height="60px"
                android:layout_marginLeft="30px"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="挂断"
                android:textColor="@color/colorWhite"
                android:textSize="20px"
                android:background="@drawable/phone_over_back_ground"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>