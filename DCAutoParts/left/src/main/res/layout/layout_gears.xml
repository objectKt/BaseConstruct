<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/degree_d"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="D"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/degree_n"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="N"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/degree_d"
        app:layout_constraintEnd_toEndOf="@id/degree_d"
        app:layout_constraintStart_toStartOf="@id/degree_d" />

    <TextView
        android:id="@+id/degree_r"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:padding="2dp"
        android:text="R"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/degree_n"
        app:layout_constraintEnd_toEndOf="@id/degree_n"
        app:layout_constraintStart_toStartOf="@id/degree_n" />


    <TextView
        android:id="@+id/car_mode"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_driver_mode"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="S"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/degree_n"
        app:layout_constraintEnd_toStartOf="@id/degree_n"
        app:layout_constraintTop_toTopOf="@id/degree_n" />

    <TextView
        android:id="@+id/degree_p"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/bg_gears"
        android:gravity="center"
        android:padding="2dp"
        android:text="P"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/degree_n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/degree_n" />


</androidx.constraintlayout.widget.ConstraintLayout>