<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_trend_bg">

    <View
        android:id="@+id/centerLineV"
        android:layout_width="1px"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carSpeedTV"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="113sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/speedUnitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="6dp"
        android:text="km/h"
        android:textColor="@android:color/white"
        android:textSize="28px"
        app:layout_constraintEnd_toEndOf="@id/carSpeedTV"
        app:layout_constraintStart_toStartOf="@id/carSpeedTV"
        app:layout_constraintTop_toTopOf="parent" />

    <com.android.launcher.view.TreedRotateSpeedView
        android:id="@+id/treedRotateSpeedView"
        android:layout_width="430dp"
        android:layout_height="430dp"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_trend_rotate_speed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/distanceToEmptyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/ffffff"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/treedRotateSpeedView"
        app:layout_constraintEnd_toEndOf="@id/treedRotateSpeedView"
        app:layout_constraintStart_toStartOf="@id/treedRotateSpeedView" />


    <TextView
        android:id="@+id/distanceToEmptyUnitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="km"
        android:textColor="@color/ffffff"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/distanceToEmptyTV"
        app:layout_constraintStart_toEndOf="@id/distanceToEmptyTV" />

    <ImageView
        android:id="@+id/distanceToEmptyIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="89dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_oilbox"
        app:layout_constraintBottom_toBottomOf="@id/treedRotateSpeedView"
        app:layout_constraintEnd_toStartOf="@id/distanceToEmptyTV" />


    <!--                           右边                              -->

    <ImageView
        android:id="@+id/oil_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="70dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/centerLineV" />


    <include
        layout="@layout/layout_treed_meter_left"
        android:layout_width="390dp"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        layout="@layout/layout_treed_meter_right"
        android:layout_width="390dp"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.android.launcher.meter.view.TechOilMeterView
        android:id="@+id/treedOilMeterView"
        android:layout_width="416dp"
        android:layout_height="500dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.android.launcher.meter.view.CruiseControlView
        android:id="@+id/cruiseControlV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/techMeterRightCL"
        app:layout_constraintStart_toStartOf="@id/techMeterRightCL" />


</androidx.constraintlayout.widget.ConstraintLayout>
