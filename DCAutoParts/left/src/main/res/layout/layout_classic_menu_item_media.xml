<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/lyricTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/ffffff"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/musicIV"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/media"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/previousIV"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/up"
        app:layout_constraintBottom_toBottomOf="@id/playIV"
        app:layout_constraintEnd_toStartOf="@id/playIV"
        app:layout_constraintTop_toTopOf="@id/playIV" />

    <ImageView
        android:id="@+id/nextIV"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/next"
        app:layout_constraintBottom_toBottomOf="@id/playIV"
        app:layout_constraintStart_toEndOf="@id/playIV"
        app:layout_constraintTop_toTopOf="@id/playIV" />


    <ImageView
        android:id="@+id/playIV"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_music_play"
        app:layout_constraintEnd_toEndOf="@id/musicIV"
        app:layout_constraintStart_toStartOf="@id/musicIV"
        app:layout_constraintTop_toBottomOf="@id/musicIV" />

</androidx.constraintlayout.widget.ConstraintLayout>