<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/speedTV"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_lib_white"
        android:textSize="60sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/speedUnitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:textColor="@color/color_lib_white"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/speedTV" />

    <View
        android:id="@+id/speedLeftLineV"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:background="@mipmap/lib_pic_bg_line"
        app:layout_constraintBottom_toBottomOf="@id/speedUnitTV"
        app:layout_constraintEnd_toStartOf="@id/speedUnitTV"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/speedRightLineV"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:background="@mipmap/lib_pic_bg_line"
        app:layout_constraintBottom_toBottomOf="@id/speedUnitTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/speedUnitTV" />

</androidx.constraintlayout.widget.ConstraintLayout>